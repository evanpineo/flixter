<br>
<div class="shadow-box co-10 offset-1">
  <h1>Current Courses</h1>
  <% current_user.enrolled_courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %><br>
    </h3>
    <br>
    <div class="row">
      <div class="col-10 custom-center">
        <%= image_tag course.image, class: 'img-fluid' %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-12 col-sm-8 text-center">
        <%= course.description %>
      </div>
      <div class="col-12  col-sm-4 text-center">
        <%= link_to 'More Info', course_path(course), class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
    <hr class="col-8 offset-2 hr">
    <br class="clr">
  <% end %>
  
  <h1>What I'm Teaching</h1>
  <% current_user.courses.each do |course| %>
    <h3 class="text-center">
      <%= link_to course.title, course_path(course) %>
    </h3>
    <br>
    <div class="row">
      <div class="col-10 custom-center">
        <%= image_tag course.image, class: 'img-fluid' %>
      </div>
    </div>
    <br>
    <div class="row">
      <div class="col-12 col-sm-8">
        <%= course.description %>
      </div>
      <div class="col-12 col-sm-4 text-center">
        <%= link_to 'More Info', course_path(course), class: 'btn btn-lg btn-primary' %>
      </div>
    </div>
    <hr class="col-8 offset-2 hr">
    <br class="clr">
  <% end %>
</div>
